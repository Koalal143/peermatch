{{ server_name }} {
    reverse_proxy {{ backend_host }}:{{ backend_port }} {
        transport http {
            connect_timeout 10s
            read_timeout 30s
            write_timeout 30s
        }
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
}